<main>
  <div class="container">
    {{#each articles}}
    <div class="row">
      <div class="col-4 center lines">
       <h4>{{this.title}}</h4>
     </div>
     <div class="col-7">
       <p>{{this.summary}}</p>
       <a href="">{{this.storyLink}}</a>
     </div>
     <div class="col-1 center">
      <form action="/delete/{{this._id}}" method="get">
      <button class='comment' data-id={{this._id}}>
       <i class="fa fa-comments fa-2x" aria-hidden="true"></i>
     </button>
      <form action="/comments/{{this._id}}" method="get">
      <button class='delete' data-id={{this._id}}>
       <i class="fa fa-trash fa-2x" aria-hidden="true"></i>
     </button>
     </form>
     </form>
   </div>
</div>
<br>
{{/each}}
</div>
</div>
</main>
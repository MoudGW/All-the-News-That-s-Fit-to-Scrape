<main>
  <div class="container">
        {{#each articles}}
            <div class="row">
            <div class="col-4 center lines">
               <h4>{{this.title}}</h4>
             </div>
             <div class="col-7">
               <p>{{this.summary}}</p>
               <a href="">{{this.storyLink}}</a>
             </div>
             <div class="col-1 center save">
             <form action="/save" method="post">
              <button>
             <i class="fa fa-floppy-o fa-3x" aria-hidden="true"></i>
             </button>
              </form>
             </div>
            </div>
            <br>
        {{/each}}
      </div>
  </div>
</main>
